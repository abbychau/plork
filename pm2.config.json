{
  "apps": [
    {
      "name": "plork-activitypub",
      "script": "scripts/start-prod.js",
      "interpreter": "node",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production"
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "error_file": "logs/error.log",
      "out_file": "logs/output.log",
      "merge_logs": true,
      "time": true
    }
  ]
}
